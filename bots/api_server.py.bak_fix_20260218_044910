from __future__ import annotations
import argparse
import json
import time
from http.server import BaseHTTPRequestHandler, HTTPServer
from urllib.parse import urlparse
from pathlib import Path
from bots.registry import get_registry
LOG_DIR = Path("logs")
LOG_DIR.mkdir(parents=True, exist_ok=True)
LOG_FILE = LOG_DIR / "api_server.log"
def log_line(s: str):
    ts = time.strftime("%Y-%m-%d %H:%M:%S")
    line = f"{ts} {s}\n"
    if LOG_FILE.exists():
        prev = LOG_FILE.read_text(encoding="utf-8", errors="ignore")
        LOG_FILE.write_text(prev + line, encoding="utf-8", errors="replace")
    else:
        LOG_FILE.write_text(line, encoding="utf-8", errors="replace")
def json_bytes(obj) -> bytes:
    return (json.dumps(obj, indent=2) + "\n").encode("utf-8")
class Handler(BaseHTTPRequestHandler):
    def _send(self, code: int, obj):
        body = json_bytes(obj)
        self.send_response(code)
        self.send_header("Content-Type", "application/json; charset=utf-8")
        self.send_header("Content-Length", str(len(body)))
        self.end_headers()
        self.wfile.write(body)
    def do_GET(self):
        p = urlparse(self.path).path
        # Index route: do NOT pretend it's health
        if p == "/":
            self._send(200, {
                "ok": True,
                "service": "ai-training-hub-faux-api",
                "endpoints": ["/health", "/bots", "/logs", "/run"]
            })
            return
        if p == "/health":
            self._send(200, {"ok": True, "service": "ai-training-hub-faux-api"})
            return
        if p == "/bots":
            reg = get_registry()
            bots = [{
                "bot_id": b.bot_id,
                "name": b.name,
                "color": b.color,
                "description": b.description,
                "demos": [{"title": d.title, "description": d.description, "args": d.args} for d in b.demos],
            } for b in reg.values()]
            self._send(200, {"ok": True, "bots": sorted(bots, key=lambda x: x["bot_id"])})
            return
        if p == "/logs":
            n = 200
            try:
                qs = urlparse(self.path).query
                if "n=" in qs:
                    n = int(qs.split("n=")[1].split("&")[0])
            except Exception:
                pass
            if LOG_FILE.exists():
                lines = LOG_FILE.read_text(encoding="utf-8", errors="replace").splitlines()[-n:]
            else:
                lines = []
            self._send(200, {"ok": True, "lines": lines})
            return
        self._send(404, {"ok": False, "error": f"not found: {p}"})
    def do_POST(self):
        p = urlparse(self.path).path
        if p != "/run":
            self._send(404, {"ok": False, "error": f"not found: {p}"})
            return
        length = int(self.headers.get("Content-Length", "0") or "0")
        raw = self.rfile.read(length) if length else b"{}"
        try:
            payload = json.loads(raw.decode("utf-8", errors="replace"))
        except Exception as e:
            self._send(400, {"ok": False, "error": f"bad json: {e}"})
            return
        bot_id = (payload.get("bot_id") or "").strip()
        args = payload.get("args") or {}
        log_line(f"RUN bot_id={bot_id} args={args}")
        from bots.run_bot import run_fallback, run_it_ticket, run_deploy_ops
        reg = get_registry()
        if bot_id not in reg:
            self._send(400, {"ok": False, "error": f"Unknown bot_id: {bot_id}"})
            return
        try:
            if bot_id == "fallback_bot":
                out = run_fallback(args.get("text", ""), args.get("input_file"), args.get("files") or [])
            elif bot_id == "it_ticket_bot":
                inp = ""
                if args.get("input_file"):
                    inp = Path(args["input_file"]).read_text(encoding="utf-8", errors="replace")
                policy = ""
                files = args.get("files") or []
                if files:
                    policy = Path(files[0]).read_text(encoding="utf-8", errors="replace")
                out = run_it_ticket(inp, policy, args.get("mode", "triage"))
            elif bot_id == "deploy_ops_bot":
                out = run_deploy_ops(args.get("files") or [], args.get("target", "all"))
            else:
                out = {"ok": True, "bot": bot_id, "note": "Registered but no API action."}
            self._send(200, out)
        except Exception as e:
            log_line(f"ERROR {e}")
            self._send(500, {"ok": False, "error": str(e)})
def main():
    ap = argparse.ArgumentParser()
    ap.add_argument("--port", type=int, default=8787)
    ap.add_argument("--host", default="127.0.0.1")
    args = ap.parse_args()
    srv = HTTPServer((args.host, args.port), Handler)
    print(f"Faux API listening on http://{args.host}:{args.port}")
    srv.serve_forever()
if __name__ == "__main__":
    main()
